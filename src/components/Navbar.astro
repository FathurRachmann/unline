---
const navItems = [
  { href: '/', text: 'Beranda' },
  { href: '/tentang', text: 'Tentang' },
  { href: '/layanan', text: 'Layanan' },
  { href: '/kontak', text: 'Kontak' },
];
---

<nav class="bg-blue-600 text-white py-4">
  <div class="container mx-auto px-4">
    <div class="flex justify-between items-center">
      <a href="/" class="text-2xl font-bold">Nama Perusahaan Anda</a>
      <div class="hidden md:flex space-x-4">
        {navItems.map((item) => (
          <a href={item.href} class="hover:underline">{item.text}</a>
        ))}
      </div>
      <button class="md:hidden" id="menuToggle">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </div>
  <div class="md:hidden hidden" id="mobileMenu">
    <div class="container mx-auto px-4 py-2">
      {navItems.map((item) => (
        <a href={item.href} class="block py-2 hover:underline">{item.text}</a>
      ))}
    </div>
  </div>
</nav>

<script>
  const menuToggle = document.getElementById('menuToggle');
  const mobileMenu = document.getElementById('mobileMenu');

  if (menuToggle && mobileMenu) {
    menuToggle.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });
  }
</script>
