---
import '../styles/global.css';
import Footer from '../components/Footer.astro';
import Navbar from '../components/Navbar.astro';
const title = "Layanan Kami";
const description = "Daftar layanan yang kami tawarkan";
---

<html lang="id">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="description" content={description} />
		<meta name="generator" content={Astro.generator} />
		<title>{title} | Nama Perusahaan Anda</title>
	</head>
	<body class="bg-gray-100">
		<Navbar />

		<main class="container mx-auto px-4 py-8">
			<h1 class="text-4xl font-bold mb-6">{title}</h1>
			
			<section class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
				<div class="bg-white p-6 rounded-lg shadow-md">
					<h2 class="text-2xl font-semibold mb-4">Layanan 1</h2>
					<p class="mb-4">Deskripsi singkat tentang layanan 1 yang kami tawarkan.</p>
					<a href="#" class="text-blue-600 hover:underline">Pelajari lebih lanjut</a>
				</div>
				<div class="bg-white p-6 rounded-lg shadow-md">
					<h2 class="text-2xl font-semibold mb-4">Layanan 2</h2>
					<p class="mb-4">Deskripsi singkat tentang layanan 2 yang kami tawarkan.</p>
					<a href="#" class="text-blue-600 hover:underline">Pelajari lebih lanjut</a>
				</div>
				<div class="bg-white p-6 rounded-lg shadow-md">
					<h2 class="text-2xl font-semibold mb-4">Layanan 3</h2>
					<p class="mb-4">Deskripsi singkat tentang layanan 3 yang kami tawarkan.</p>
					<a href="#" class="text-blue-600 hover:underline">Pelajari lebih lanjut</a>
				</div>
			</section>

			<section class="mt-12 bg-white p-6 rounded-lg shadow-md">
				<h2 class="text-2xl font-semibold mb-4">Mengapa Memilih Kami?</h2>
				<ul class="list-disc list-inside">
					<li class="mb-2">Pengalaman bertahun-tahun dalam industri</li>
					<li class="mb-2">Tim profesional yang berdedikasi</li>
					<li class="mb-2">Solusi yang disesuaikan dengan kebutuhan Anda</li>
					<li>Dukungan pelanggan 24/7</li>
				</ul>
			</section>
		</main>

		<Footer />
	</body>
</html>
