---
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';

const title = "Kontak Kami";
const description = "Hubungi kami untuk informasi lebih lanjut";
---

<html lang="id">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="description" content={description} />
		<meta name="generator" content={Astro.generator} />
		<title>{title} | Nama Perusahaan Anda</title>
	</head>
	<body class="bg-gray-100">
		<Navbar />

		<main class="container mx-auto px-4 py-8">
			<h1 class="text-4xl font-bold mb-6">{title}</h1>
			
			<div class="grid grid-cols-1 md:grid-cols-2 gap-8">
				<section class="bg-white p-6 rounded-lg shadow-md">
					<h2 class="text-2xl font-semibold mb-4">Informasi Kontak</h2>
					<p class="mb-2"><strong>Alamat:</strong> Jalan Contoh No. 123, Kota, Provinsi</p>
					<p class="mb-2"><strong>Telepon:</strong> (021) 1234-5678</p>
					<p class="mb-2"><strong>Email:</strong> info@perusahaananda.com</p>
					<p><strong>Jam Kerja:</strong> Senin - Jumat, 09:00 - 17:00</p>
				</section>

				<section class="bg-white p-6 rounded-lg shadow-md">
					<h2 class="text-2xl font-semibold mb-4">Formulir Kontak</h2>
					<form>
						<div class="mb-4">
							<label for="nama" class="block mb-2">Nama</label>
							<input type="text" id="nama" name="nama" class="w-full px-3 py-2 border rounded-lg" required>
						</div>
						<div class="mb-4">
							<label for="email" class="block mb-2">Email</label>
							<input type="email" id="email" name="email" class="w-full px-3 py-2 border rounded-lg" required>
						</div>
						<div class="mb-4">
							<label for="pesan" class="block mb-2">Pesan</label>
							<textarea id="pesan" name="pesan" rows="4" class="w-full px-3 py-2 border rounded-lg" required></textarea>
						</div>
						<button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700">Kirim Pesan</button>
					</form>
				</section>
			</div>

			<section class="mt-8 bg-white p-6 rounded-lg shadow-md">
				<h2 class="text-2xl font-semibold mb-4">Lokasi Kami</h2>
				<div class="aspect-w-16 aspect-h-9">
					<iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3966.054610299685!2d106.82704231476885!3d-6.175392395527383!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x2e69f5d2e764b12d%3A0x3d2ad6e1e0e9bcc8!2sMonumen%20Nasional!5e0!3m2!1sid!2sid!4v1650123456789!5m2!1sid!2sid" width="100%" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
				</div>
			</section>
		</main>

		<Footer />
	</body>
</html>
